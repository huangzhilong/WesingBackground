<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TMEBackground">
        <attr name="tme_shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

        <attr name="tme_solid_color" format="color" />

        <attr name="tme_corners_radius" format="dimension" />
        <attr name="tme_corners_bottomLeftRadius" format="dimension" />
        <attr name="tme_corners_bottomRightRadius" format="dimension" />
        <attr name="tme_corners_topLeftRadius" format="dimension" />
        <attr name="tme_corners_topRightRadius" format="dimension" />

        <attr name="tme_gradient_angle" format="float" />
        <attr name="tme_gradient_centerColor" format="color" />
        <attr name="tme_gradient_endColor" format="color" />
        <attr name="tme_gradient_startColor" format="color" />
        <!-- fraction 是指百分比的意思，以%结尾，如20% -->
        <attr name="tme_gradient_centerX" format="float|fraction" />
        <attr name="tme_gradient_centerY" format="float|fraction" />
        <attr name="tme_gradient_gradientRadius" format="float|fraction|dimension" />
        <attr name="tme_gradient_type" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="tme_gradient_useLevel" format="boolean" />

        <attr name="tme_padding_left" format="dimension" />
        <attr name="tme_padding_top" format="dimension" />
        <attr name="tme_padding_right" format="dimension" />
        <attr name="tme_padding_bottom" format="dimension" />

        <attr name="tme_size_width" format="dimension">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="tme_size_height" format="dimension">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>

        <attr name="tme_stroke_width" format="dimension" />
        <attr name="tme_stroke_color" format="color" />
        <attr name="tme_stroke_dashWidth" format="dimension" />
        <attr name="tme_stroke_dashGap" format="dimension" />

        <!---用户替换layout 定义的shape xml -->
        <attr name="tme_background" format="reference"/>
    </declare-styleable>

</resources>